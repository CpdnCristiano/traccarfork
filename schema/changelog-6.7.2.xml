<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
  logicalFilePath="changelog-6.7.2">

  <changeSet author="author" id="changelog-6.7.2">
    <preConditions onFail="MARK_RAN">
      <not>
        <columnExists tableName="tc_commands" columnName="calendarid" />
      </not>
    </preConditions>

    <addColumn tableName="tc_commands">
      <column name="calendarid" type="INT">
        <constraints nullable="true" />
      </column>
    </addColumn>
    <addForeignKeyConstraint baseTableName="tc_commands"
                            baseColumnNames="calendarid"
                            referencedTableName="tc_calendars"
                            referencedColumnNames="id"
                            constraintName="fk_tc_commands_calendarid"
                            onDelete="SET NULL" />
  </changeSet>

</databaseChangeLog>
